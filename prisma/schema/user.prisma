model User {
  id          String    @id @unique @default(cuid())
  firstname   String
  name        String
  email       String    @unique
  password    String
  role        Role      @default(CANDIDATE)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime? @updatedAt
  appliedJobs String[]
  stack       Stack[]
  createdJobs String[]
  company     Company?  @relation(fields: [companyId], references: [id])
  companyId   String?
  job         Job[]
}
